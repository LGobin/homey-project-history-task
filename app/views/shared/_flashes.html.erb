<div class="alert">
  <% if notice %>
    <div class="p-4 mb-4 text-md text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
      <span class="font-medium">Info!</span> <%= notice %>
    </div>
  <% end %>

  <% if error %>
    <div class="p-4 mb-4 text-md text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
      <span class="font-medium">Alert!</span> <%= error %>
    </div>
  <% end %>
</div>
