<% if errors[:name].any? %>
  $("#name").html("<%= project.name %>");
  $("#project_name_errors").html("<%= errors[:name].join(', ') %>");
<% end %>
<% if errors[:next_status].any? %>
  $("#status").html("<%= project.status %>");
  $("#project_status_errors").html("<%= errors[:next_status].join(', ') %>");
<% end %>

$("#comment_content_errors").html("<%= errors[:content].join(', ') %>");
