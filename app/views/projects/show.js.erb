<% if project_errors.present? %>
  $("#name").html("<%= project.name %>");
  $("#project_name_errors").html("<%= project_errors[:name].join(', ') %>");
<% end %>
<% if status_errors.present? %>
  $("#status").html("<%= project.status %>");
  $("#project_status_errors").html("<%= status_errors[:next_status].join(', ') %>");
<% end %>
<% if comment_errors.present? %>
  $("#comment_content_errors").html("<%= comment_errors[:content].join(', ') %>");
<% end %>
